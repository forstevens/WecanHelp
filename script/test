info "Starting supervisord..."
sed -i 's/nodaemon=true/nodaemon=false/' /etc/supervisor.conf
/usr/bin/supervisord -c /etc/supervisor.conf 

sleep 3

nginx -V
php7 -v
php-fpm7 -v
echo "supervisord: "`supervisord -v`

curl -s http://localhost

